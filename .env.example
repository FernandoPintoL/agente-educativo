# ==========================================
# AGENTE LLM - Configuración para Railway
# ==========================================

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS (Compartida)
# Railway proporciona DATABASE_URL automáticamente
# ==========================================
DATABASE_URL=postgresql://user:password@postgres-service-name:5432/educativa_db
DATABASE_HOST=postgres-service-name
DATABASE_PORT=5432
DATABASE_NAME=educativa_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_postgres_password

# ==========================================
# CONFIGURACIÓN DE REDIS/CACHÉ (Compartida)
# Railway proporciona REDIS_URL automáticamente
# ==========================================
REDIS_URL=redis://redis-service-name:6379
REDIS_HOST=redis-service-name
REDIS_PORT=6379
REDIS_DB=0

# ==========================================
# CONFIGURACIÓN DE API
# ==========================================
API_HOST=0.0.0.0
# En Railway usa $PORT (8080), en local usa 8003
PORT=${PORT:-8003}

# ==========================================
# CONFIGURACIÓN GENERAL
# ==========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SERVICE_TYPE=agent

# ==========================================
# GROQ LLM CONFIGURATION (Requerido)
# ==========================================
GROQ_API_KEY=your_groq_api_key_here

# Modelos disponibles en Groq (elige uno):
# - mixtral-8x7b-32768      (Rápido, bueno para síntesis) ← RECOMENDADO
# - llama-3.3-70b-versatile (Más potente, más lento)
# - llama-3.1-70b-versatile (Alternativa llama)
# - llama-2-70b-4096        (Antiguo pero estable)
GROQ_MODEL=mixtral-8x7b-32768

# Temperatura: 0.0 (determinista) a 1.0 (creativo)
# 0.3 = Respuestas consistentes (recomendado para síntesis)
GROQ_TEMPERATURE=0.3

GROQ_MAX_TOKENS=2048
GROQ_TIMEOUT=30

# ==========================================
# LANGCHAIN CONFIGURATION
# ==========================================
LANGCHAIN_API_KEY=your_langchain_api_key_if_needed
LANGCHAIN_TRACING_V2=false

# ==========================================
# SEGURIDAD
# ==========================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# URLs DE SERVICIOS ML (Para integración)
# ==========================================
ML_SUPERVISED_URL=https://ml-supervisado-railway-domain.com
ML_UNSUPERVISED_URL=https://ml-unsupervised-railway-domain.com
ML_API_TIMEOUT=30

# ==========================================
# AUTENTICACIÓN LARAVEL SANCTUM
# ==========================================
LARAVEL_API_URL=https://your-laravel-domain.com
LARAVEL_SANCTUM_ENABLED=true

# ==========================================
# LOGGING
# ==========================================
LOG_FILE=/app/logs/agent.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# CACHE
# ==========================================
CACHE_ENABLED=true
CACHE_TTL=1800
